{
  "manifest_version": 3,
  "name": "Playlist Title Logger",
  "version": "1.0",
  "description": "Logs the title of the YouTube playlist",
  "permissions": ["activeTab", "webRequest"],
  "host_permissions": ["http://localhost:3000/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Click to log playlist title"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/playlist*"],
      "js": ["content.js"]
    }
  ]
}
