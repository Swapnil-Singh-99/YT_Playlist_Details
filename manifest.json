{
  "manifest_version": 2,
  "name": "Playlist Title Logger",
  "version": "1.0",
  "description": "Logs the title of the YouTube playlist",
  "permissions": ["activeTab"],
  "browser_action": {
    "default_title": "Click to log playlist title",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/playlist*"],
      "js": ["content.js"]
    }
  ]
}
